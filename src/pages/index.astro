---
import Layout from "../layouts/Layout.astro";
import Card from "../components/card.astro";
import CommandLine from "../components/commandLine.astro";
---

<Layout title="Start-Page">
  <div class="content">
    <Card />
    <CommandLine />
  </div>
</Layout>

<style>
  /* Base styles */

  html,
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  body {
    overflow: hidden;
    background-size: 400% 400%;
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    min-height: 100vh;
    position: relative;
    z-index: 1;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .content {
      padding: 1.5rem;
      gap: 1.5rem;
    }

    .card {
      padding: 1.5rem;
      backdrop-filter: blur(4px);
    }

    .command-line {
      padding: 0.75rem;
    }
  }
</style>
